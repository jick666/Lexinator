{
  "name": "Lexinator",
  "version": "1.0",
  "description": "A modular, adaptive, experimental JavaScript lexer.",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "lint": "eslint .",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config jest.config.cjs --coverage",
	"tree": "node ./.github/workflows/scripts/genTree.js",
    "build": "echo \"Nothing to build\"",
    "prepare": "husky",
    "build:extension": "npm --prefix extension install && npm --prefix extension run build",
    "publish:extension": "npm --prefix extension install && npm --prefix extension run publish"
  },
  "keywords": [
    "lexer",
    "javascript",
    "codex",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@jest/globals": "^29.0.0",
    "@octokit/rest": "^22.0.0",
    "eslint": "^8.0.0",
    "husky": "^9.1.7",
    "jest": "^29.0.0",
    "nock": "^13.3.0"
  },
  "dependencies": {
    "unicode-match-property-ecmascript": "^2.0.0",
    "unicode-match-property-value-ecmascript": "^2.2.0"
  },
  "engines": {
    "node": ">=18"
  }
}
