{
  "name": "Lexinator",
  "version": "1.1.3",
  "description": "A modular, adaptive, experimental JavaScript lexer.",
  "main": "src/index.js",
  "type": "module",
  "packageManager": "yarn@4.9.2",
  "nodeLinker": "node-modules",
  "repository": {
    "type": "git",
    "url": "https://github.com/jick666/Lexinator"
  },
  "bugs": {
    "url": "https://github.com/jick666/Lexinator/issues"
  },
  "scripts": {
    "start": "node src/index.js",
    "lint": "eslint .",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.cjs --coverage",
    "build": "tsc -p tsconfig.build.json",
    "prepare": "husky",
    "gentree": "node ./.github/workflows/scripts/genTree.js",
    "tree": "yarn gentree",
    "diag": "node ./src/utils/diagnostics.js",
    "diagnostics": "yarn diag",
    "check:coverage": "node src/utils/checkCoverage.js 90",
    "format:check": "prettier --check .",
    "workflow": "yarn lint && yarn format:check && yarn test --coverage && yarn check:coverage && node tests/benchmarks/lexer.bench.js && node tests/benchmarks/realworld.bench.js",
    "clean": "rimraf dist coverage .turbo && echo cleaned",
    "upgrade": "yarn up \"*\" --latest",
    "format": "prettier --write ."
  },
  "keywords": [
    "lexer",
    "javascript",
    "codex",
    "automation"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "cosmiconfig": "^9.0.0",
    "unicode-match-property-ecmascript": "^2.0.0",
    "unicode-match-property-value-ecmascript": "^2.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@jest/globals": "^29.7.0",
    "@octokit/rest": "^20.0.0",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "nock": "^14.0.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  }
}
