; ── network / proxy ─────────────────────────────────────────────
proxy=${HTTP_PROXY}
https-proxy=${HTTPS_PROXY}

; ── reproducibility ─────────────────────────────────────────────
save-exact=true
lockfile-version=3
engine-strict=true

; ── CI tweaks ───────────────────────────────────────────────────
fund=false
update-notifier=false
progress=false
audit=true

; install only prod deps *and* skip lifecycle scripts (no Husky)
only=prod
ignore-scripts=true